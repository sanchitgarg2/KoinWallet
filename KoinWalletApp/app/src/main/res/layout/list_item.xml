    <!-- Title Of Song-->


    <ImageView
        android:id="@+id/SearchCurrencyIcon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:id="@+id/coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/SearchCurrencyIcon"
        android:layout_toRightOf="@+id/SearchCurrencyIcon"
        android:text="BitCoin"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />


    <TextView
        android:id="@+id/coinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coinName"
        android:layout_alignStart="@+id/coinName"
        android:layout_below="@+id/coinName"
        android:text="BTC"
        android:textColor="#343434"
        android:textSize="15dip" />

    <!-- Rightend Duration -->


