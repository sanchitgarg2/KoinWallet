    <!-- Title Of Song-->


    <ImageView
        android:id="@+id/WatchlistCurrencyImage"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:id="@+id/currencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/WatchlistCurrencyImage"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/WatchlistCurrencyImage"
        android:layout_toRightOf="@+id/WatchlistCurrencyImage"
        android:text="BitCoin"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />


    <TextView
        android:id="@+id/global_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SearchCurrencyIcon"
        android:layout_alignStart="@+id/SearchCurrencyIcon"
        android:layout_below="@+id/currencyName"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="Global average BTC/USD"
        android:textColor="#343434"
        android:textSize="15dip" />

    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/Net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:gravity="right"
        android:text="Quantity"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/net_value_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Net"
        android:layout_alignStart="@+id/Net"
        android:layout_below="@+id/Net"
        android:text="$11068"
        android:textColor="#343434"
        android:textSize="15dip" />


</RelativeLayout>